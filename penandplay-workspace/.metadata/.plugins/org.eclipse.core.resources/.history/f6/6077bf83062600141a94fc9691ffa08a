	    @Override
	    public void onBackPressed() {	    	
	    	    super.onBackPressed();
	    	    Integer last_group = null;
	    	    for (Integer key : allgroups.keySet()){
	    	    		    	  last_group=key;  	
	    	    }
	    	    btmpass.removeGroup(last_group);
	    	    
	            Intent capture_intent = new Intent(getBaseContext(), PhotoActivity.class);
	        	capture_intent.putExtra("nextlayer","QUIT");
				setResult(RESULT_OK,capture_intent);
	            finish();
	    }
	    
	    @Override
	    public void onResume()
	    {   super.onResume();
	    	Log.d(TAG, "onResume Called" );
	    	/*
	    	t = new Thread(upd);
	    	upd.running = true;
		    t.start();
		    */
	    }
	    @Override
	    public void onPause()
	    {
	    	super.onPause();
	      	Log.d(TAG,"onPause event"); 
	     	upd.running = false;
	      	Log.d(TAG,"running false"); 
	      	if(t == null){
	    	while(true){
	    		try{
	    			t.join();
	    		}catch(InterruptedException e){
	    			e.printStackTrace();
	    		}break;
	    	}

		    t = null;
	      	}
		    Log.d(TAG,"paused"); 
	    }
	    
	    @Override
	    public void onDestroy() {
	        //deleteDirectory(parentDir);
	        super.onDestroy();
	      	Log.d(TAG,"onDestroy event"); 
	     	upd.running = false;
	      	Log.d(TAG,"set running false"); 
	      	if(t == null){
	    	while(true){
	    		try{
	    			t.join();
	    		}catch(InterruptedException e){
	    			e.printStackTrace();
	    		}break;
	    	}

		    t = null;
	      	}
		    Log.d(TAG,"paused"); 
		    
	    }

	 

